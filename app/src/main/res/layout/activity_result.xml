<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#FFFDE6"
    tools:context=".ResultActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewClouds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_dark_background"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recyclerViewClouds"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif"
        android:text="Stratocumulus\n90% certainty"
        android:textAlignment="textStart"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/picUserPicture"
        android:layout_width="wrap_content"
        android:layout_height="238dp"
        android:layout_above="@+id/result1"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/cumulus_1" />


    <RadioGroup
        android:id="@+id/feedback_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:checkedButton="@id/choice_dont_know"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/choice_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Correct" />

        <RadioButton
            android:id="@+id/choice_dont_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="I don't know" />

        <RadioButton
            android:id="@+id/choice_incorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Incorrect" />

    </RadioGroup>


</RelativeLayout>