<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEFAEE"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayoutCameraGalery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTakePic"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_weight="0.5"
            android:text="take picture" />

        <Button
            android:id="@+id/btnOpenGalery"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_weight="0.5"
            android:backgroundTint="#0B4AC5"
            android:text="@string/open_galery" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/txtUserNotification"
        android:layout_below="@+id/LinearLayoutCameraGalery"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/picturedisplay" />


    <Button
        android:id="@+id/btnDisplayResult"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Upload"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtUserNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDisplayResult"
        android:layout_marginBottom="25dp"
        android:isScrollContainer="true"
        android:textAlignment="center" />
</RelativeLayout>